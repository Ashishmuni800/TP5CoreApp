@model IEnumerable<WebApplication2.Models.Employee>
@{
}

<a asp-action="Create" asp-controller="Employee" class="btn btn-outline-danger">Create</a>
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Email</th>
        <th>Mobile</th>
        <th>Address</th>
        <th>Action</th>
    </tr>

    @foreach (var emp in Model)
            {
                <tr>
                    <td>@emp.Id</td>
                    <td>@emp.Name</td> 
                    <td>@emp.Email</td>
                    <td>@emp.Mobile</td>
                    <td>@emp.Address</td>
                    <td>
                        <a asp-action="Edit" asp-controller="Employee" asp-route-id="@emp.Id" onclick="return confirm('are you sure to Edit this record')">Edit</a > || <a asp-action="Delete" asp-controller="Employee" asp-route-id="@emp.Id" onclick="return confirm('are you sure to delete this record')">Delete</a>
                    </td>
                </tr>
            }
</table>
