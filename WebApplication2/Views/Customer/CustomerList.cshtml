@model IEnumerable<WebApplication2.Models.ViewModel.CustomerViewModel>
@{ 
}

@if(Model.Count() <= 0)
{
    <p class="text-center text-danger">customer was not found at this location</p>
}
else
{
<table class="table table-bordered">
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Mobile</th>
        <th>Location</th>
    </tr>

    @foreach (var cust in Model)
    {
                <tr>
                    <td>@cust.Name</td>
                    <td>@cust.Email</td>
                    <td>@cust.Mobile</td>
                    <td>@cust.Location </td>
                </tr>
    }
</table>
}